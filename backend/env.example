# Configuration du serveur
PORT=3000
NODE_ENV=development

# Base de données
DATABASE_URL="postgresql://username:password@localhost:5432/bai_consulting_db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@bai-consulting.com

# Frontend URL
FRONTEND_URL=http://localhost:3001

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info 

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
BANNED_IPS=

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_ENABLED=true

# Domaines autorisés (production)
ALLOWED_ORIGINS=https://votre-domaine.com,https://admin.votre-domaine.com 